<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@post) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <p class="submit"><%= f.submit 'Update Book' %></p>
<% end %>
<span class="under"><%= link_to "Show", post_path(@post.id), class: "show" %></span>
|
<span class="under"><%= link_to 'Back', posts_new_path, class: "back" %></span>
