<!DOCTYPE html>
<html>

<head>
	<title>Bookers</title>
</head>

<body>

	<h1>Books</h1>

	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @posts.each do |post| %>
			<tr>
				<td>
					<span class="indent"><%= post.title %></span>
				</td>
				<td>
					<span class="indent"><%= post.body %></span>
				</td>
				<td class="white">
					<span class="under"><%= link_to "Show", post_path(post.id), class: "show_#{post.id}" %></span>
					<span class="under"><%= link_to "Edit", edit_post_path(post.id), class: "edit_#{post.id}" %></span>
					<span class="under"><%= link_to "Destroy", destroy_post_path(post.id), class: "destroy_#{post.id}", method: :delete, "data-confirm" => "Are you sure that you want to delete?" %></span>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>





	<h2>New book</h2>
	<!-- form_for部分 -->
	<%= form_for(@post) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title, class: "book_title" %>

	<h4>Body</h4>
	<%= f.text_area :body,class: "book_body" %>

	<p class="submit"><%= f.submit 'Create Book' %></p>

	<% end %>

</body>

</html>